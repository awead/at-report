<%= content_tag :h1, "Finding Aids" %>
<%= content_tag :table, :class => "table table-striped table-condensed" do %>
  <%= content_tag :tr do %>
    <%= content_tag :th, "PID" %>
    <%= content_tag :th, "Title" %>
  <% end %>
  <% @results.each do |row| %>
    <%= content_tag :tr do %>
      <%= content_tag :td, row[:pid] %>
      <%= content_tag :td, link_to(row[:title], artk.resource_path(row[:pid])) %>
    <% end %>    
  <% end %>
<% end %>