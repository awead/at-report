<%= content_tag :h1, "Components for "+params[:resource_id] %>
<%= link_to "Back to finding aid", resource_path(params[:resource_id]) %>
<%= content_tag :table, :class => "table table-striped table-condensed" do %>
  <%= content_tag :tr do %>
    <%= content_tag :th, "PID" %>
    <%= content_tag :th, "Title" %>
  <% end %>
  <% @results.each do |row| %>
    <%= content_tag :tr do %>
      <%= content_tag :td, row[:pid] %>
      <%= content_tag :td, link_to(row[:title], artk.resource_component_path(params[:resource_id],row[:pid])) %>
    <% end %>    
  <% end %>
<% end %>